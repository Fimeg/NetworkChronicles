{
  "name": "network-chronicles",
  "version": "1.0.0",
  "description": "A gamified self-discovering documentation system for network infrastructure",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:content": "node scripts/test-content.js",
    "lint": "eslint src tests",
    "build": "tsc",
    "dev": "nodemon src/index.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docs": "jsdoc -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/network-chronicles.git"
  },
  "keywords": [
    "network",
    "documentation",
    "gamification",
    "learning",
    "terminal",
    "shell",
    "infrastructure"
  ],
  "author": "Network Chronicles Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/network-chronicles/issues"
  },
  "homepage": "https://github.com/yourusername/network-chronicles#readme",
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "express": "^4.17.3",
    "socket.io": "^4.4.1",
    "axios": "^0.26.1",
    "jsonwebtoken": "^8.5.1",
    "winston": "^3.6.0",
    "dotenv": "^16.0.0",
    "joi": "^17.6.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.19",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "jsdoc": "^3.6.10",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
